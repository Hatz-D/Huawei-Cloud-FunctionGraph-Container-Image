using System;
using System.Net;
using System.Text;
using System.Text.Json;
using System.Net.Http;
using System.Threading.Tasks;

class Program
{
    static async Task http_request() {
        string url = "http://110.238.103.247:8000";

        using (HttpClient client = new HttpClient())
        {
            try
            {
                HttpResponseMessage response = await client.GetAsync(url);
                response.EnsureSuccessStatusCode();

                string responseBody = await response.Content.ReadAsStringAsync();
                Console.WriteLine(responseBody);
            }
            catch (HttpRequestException e)
            {
                Console.WriteLine("\nException Caught!");
                Console.WriteLine("Message :{0} ", e.Message);
            }
        }
    }

    static void Main(string[] args)
    {
        HttpListener listener = new HttpListener();
        listener.Prefixes.Add("http://*:8000/");
        listener.Start();
        Console.WriteLine("DotNet web server at port 8000 is running..");

        while (true)
        {
            HttpListenerContext context = listener.GetContext();
            HttpListenerResponse response = context.Response;

            var responseObject = new
            {
                isBase64Encoded = true,
                statusCode = (int)HttpStatusCode.OK,
                headers = new { ContentType = "text/html" },
                body = "<html><body><h2>This is DotNet HTTP function.</h2></body></html>"
            };

            string jsonResponse = JsonSerializer.Serialize(responseObject);
            byte[] buffer = Encoding.UTF8.GetBytes(jsonResponse);

            response.ContentType = "application/json";
            response.ContentLength64 = buffer.Length;

            response.OutputStream.Write(buffer, 0, buffer.Length);
            response.Close();

            http_request();
        }
    }
}
